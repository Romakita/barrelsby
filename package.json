    "dir-compare": "^4.0.0",
    "eslint": "^8.13.0",
    "eslint-config-prettier": "^8.5.0",
    "fs-extra": "^10.0.0",
    "jest": "^27.4.4",
    "mock-fs": "^5.1.2",
    "prettier": "^2.6.2",
    "snyk": "^1.858.0",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.7.0",
    "typescript": "^4.7.0-dev.20220418"
