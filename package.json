  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bencoveney/barrelsby/issues"
  },
  "homepage": "https://github.com/bencoveney/barrelsby#readme",
  "dependencies": {
    "signale": "^1.4.0",
    "yargs": "^17.4.1"
  },
  "devDependencies": {
    "@types/eslint": "^8.4.1",
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^27.0.2",
    "@types/mock-fs": "^4.13.1",
    "@types/node": "^16.11.26",
